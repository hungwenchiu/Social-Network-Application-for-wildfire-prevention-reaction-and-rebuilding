    <body>

        <form id="initializeSocketIoConnection" action="">
            <button>initialize SocketIo Connection</button>
        </form>  

        <form id="bindUserNameWithSocket" action="">
            <button>bind username001 with socket</button>
        </form>  

        <form id="bindUserNameWithSocket002" action="">
          <button>bind username002 with socket</button>
        </form>  
        
        <form id="disconnect" action="">
            <button>disconnect</button>
        </form>  
          
        <script src="/socket.io/socket.io.js"></script>
        <script>
          var socket;
          var form = document.getElementById('initializeSocketIoConnection');
          form.addEventListener('submit', function(e) {
            e.preventDefault();
            socket = io();
            socket.on('public message', function(msg) {
              console.log("public message received: " , msg);
            });
          });
          
          var form = document.getElementById('bindUserNameWithSocket');
          form.addEventListener('submit', function(e) {
            e.preventDefault();
            socket.emit('bindUserNameWithSocket', 'username001');
          });

          var form = document.getElementById('bindUserNameWithSocket002');
          form.addEventListener('submit', function(e) {
            e.preventDefault();
            socket.emit('bindUserNameWithSocket', 'username002');
          });

          var form = document.getElementById('disconnect');
          form.addEventListener('submit', function(e) {
            e.preventDefault();
            socket.disconnect();
          });
          
        </script>
      </body>

