<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1">
        <title>PublicChat</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/styles/chat.css">
        <!--add icon library-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
        <script src="/socket.io/socket.io.js"></script>
    </head>
    <body>
        <div class="d-flex" id="wrapper">

            <!-- page-content-wrapper -->
            <div id="page-content-wrapper">
                <!-- navbar -->
                <nav class="navbar navbar-dark">
                    <div class="mr-auto d-inline-flex">
                        <a class="nav-link nav-txt" href="/esnDir" id="dir-btn"><em class="fas fa-users fa-lg" aria-hidden="true"></em></a>
                        <a class="nav-link nav-txt" href="/chatroom" id="public-chat-btn"><em class="fa fa-comments fa-lg" aria-hidden="true"></em></a>
                        <a class="nav-link nav-txt" href="/privateMsgs" id="inbox-btn"><em class="fas fa-envelope fa-lg" aria-hidden="true"></em></a>
                        <a class="nav-link nav-txt" href="/status" id="status-btn"><em class="fa fa-medkit fa-lg" aria-hidden="true"></em></a>
                        <!-- <a class="nav-link nav-txt" href="#"><em class="fas fa-camera fa-lg"></em></a> -->
                        <a class="nav-link nav-txt logout-btn" href="#"><em class="fas fa-sign-out-alt fa-lg"></em></a>
                    </div>
                </nav>
                <!-- navbar -->
                <div id="fieldset-container">
                    <fieldset>
                        <!-- public chat Page Content -->
                        <div class="container bootstrap snippets bootdeys chat-container">
                            <!-- <div class="col-md-7 col-xs-12 col-md-offset-2"> -->
                            <!-- Panel Chat -->
                            <div class="panel">
                                <div class="panel-body">
                                    <div class="chat-window">
                                    </div>
                                </div>
                                <div class="panel-footer">
                                    <form id="btn-send">
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="msg-txt" placeholder="Say something">
                                            <span class="input-group-btn">
                                                <button class="btn btn-primary" type="submit" name="submit"><em class="fa fa-paper-plane" aria-hidden="true"></em></button>
                                            </span>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!-- End Panel Chat -->
                            <!-- </div> -->
                        </div>
                        <!-- Public chat Page Content -->
                    </fieldset>
                </div>
               
            </div>
            <!-- /#page-content-wrapper -->
        </div>
        <!-- /#wrapper -->

        <!-- Bootstrap core JavaScript -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
        <!-- import chat room js file -->
        <script type="module" src="/js/chatRoom.js"></script>
        <script src="/js/nav.js"></script>
        <script type="module" src="/js/sockets/publicChatSocket.js"></script>
    </body>

</html>